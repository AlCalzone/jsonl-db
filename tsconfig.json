{
	"extends": "@tsconfig/node12/tsconfig.json",
	"compilerOptions": {
		// What to output
		"noEmit": true,
		"removeComments": false,
		"stripInternal": true,
		"declaration": false,
		"outDir": "build/",
		"sourceMap": true,
		"inlineSourceMap": false,
		// What to do with errors
		"importsNotUsedAsValues": "error",
		"noEmitOnError": true,
		// Misc options
		"pretty": true,
		"types": [
			"node",
			"jest",
			"jest-extended"
		],
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"build/**",
		"node_modules/**"
	]
}
